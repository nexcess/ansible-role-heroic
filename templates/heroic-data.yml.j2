
port: 8080

# Cluster configuration.
cluster:
  protocols:
    - type: grpc
  discovery:
    type: static
    nodes:
      - grpc://127.0.0.1

# Metrics configuration.
metrics:
  backends:
    - type: datastax
      seeds:
        {{ heroic_cassandra_host_list | to_nice_yaml | indent(8, false) }}

# Metadata configuration.
metadata:
  backends:
    - type: elasticsearch
      connection:
        seeds:
          {{ heroic_elasticsearch_host_list | to_nice_yaml(indent=8) }}

# Suggest configuration.
suggest:
  backends:
    - type: elasticsearch
      connection:
        seeds:
          {{ heroic_elasticsearch_host_list | to_nice_yaml(indent=8) }}
